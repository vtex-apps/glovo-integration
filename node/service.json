{
  "memory": 1024,
  "ttl": 60,
  "timeout": 30,
  "minReplicas": 2,
  "maxReplicas": 6,
  "workers": 1,
  "routes": {
    "createOrder": {
      "path": "/_v/glovo/orders/create",
      "public": true
    },
    "cancelOrder": {
      "path": "/_v/glovo/orders/delete",
      "public": true
    },
    "updateProduct": {
      "path": "/_v/glovo/products/update",
      "public": true
    },
    "updateCompleteMenu": {
      "path": "/_v/glovo/menu/update-all",
      "public": true
    },
    "updatePartialMenu": {
      "path": "/_v/glovo/menu/update-partial",
      "public": true
    },
    "glovoMenu": {
      "path": "/_v/glovo/glovo-menu",
      "public": false
    },
    "getGlovoMenuByStore":{
      "path":"/_v/glovo/get-menu/:storeId",
      "public": false
    }
  },
  "events": {
    "updateOnStartHandling": {
      "sender": "vtex.orders-broadcast",
      "topics": ["ready-for-handling", "waiting-seller-handling"]
    },
    "updateOnInvoiced": {
      "sender": "vtex.orders-broadcast",
      "topics": ["invoiced"]
    }
  }
}
