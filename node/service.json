{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "createOrder": {
      "path": "/_v/glovo/orders/create",
      "public": true
    },
    "cancelOrder": {
      "path": "/_v/glovo/orders/delete",
      "public": true
    },
    "updateProduct": {
      "path": "/_v/glovo/products/update",
      "public": true
    }
  },
  "events": {
    "orderStatus": {
      "sender": "vtex.orders-broadcast",
      "topics": ["start-handling", "invoiced"]
    }
  }
}
