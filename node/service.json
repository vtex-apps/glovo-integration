{
  "memory": 1024,
  "ttl": 60,
  "timeout": 5,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "createOrder": {
      "path": "/_v/glovo/orders/create",
      "public": true
    },
    "cancelOrder": {
      "path": "/_v/glovo/orders/delete",
      "public": true
    },
    "updateProduct": {
      "path": "/_v/glovo/products/update",
      "public": true
    },
    "updateMenuAll": {
      "path": "/_v/glovo/menu/update-all",
      "public": true
    },
    "updateMenuPartial": {
      "path": "/_v/glovo/menu/update-partial",
      "public": true
    },
    "saveGlovoMenu": {
      "path": "/_v/glovo/glovo-menu/save",
      "public": false
    },
    "getGlovoMenu": {
      "path": "/_v/glovo/glovo-menu/get",
      "public": false
    },
    "saveStoreMenuUpdates": {
      "path": "/_v/glovo/menu-updates/save",
      "public": false
    },
    "getStoreMenuUpdates": {
      "path": "/_v/glovo/menu-updates/get",
      "public": false
    },
    "saveProductRecord": {
      "path": "/_v/glovo/product-record/save",
      "public": false
    },
    "getProductRecord": {
      "path": "/_v/glovo/product-record/get",
      "public": false
    },
    "saveOrderRecord": {
      "path": "/_v/glovo/order-record/save",
      "public": false
    },
    "getOrderRecord": {
      "path": "/_v/glovo/order-record/get",
      "public": false
    }
  },
  "events": {
    "updateOnStartHandling": {
      "sender": "vtex.orders-broadcast",
      "topics": ["handling"]
    },
    "updateOnInvoiced": {
      "sender": "vtex.orders-broadcast",
      "topics": ["invoiced"]
    }
  }
}
