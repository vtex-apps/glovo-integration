{
  "memory": 256,
  "ttl": 60,
  "timeout": 5,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "createOrder": {
      "path": "/_v/glovo/orders/create",
      "public": true
    },
    "cancelOrder": {
      "path": "/_v/glovo/orders/delete",
      "public": true
    },
    "updateProduct": {
      "path": "/_v/glovo/products/update",
      "public": true
    },
    "getOrderRecord": {
      "path": "/_v/glovo/order-records/get",
      "public": false
    }
  },
  "events": {
    "updateOnStartHandling": {
      "sender": "vtex.orders-broadcast",
      "topics": ["start-handling"]
    },
    "updateOnInvoiced": {
      "sender": "vtex.orders-broadcast",
      "topics": ["invoiced"]
    }
  }
}
