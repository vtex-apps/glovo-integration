{
  "name": "glovo-integration",
  "vendor": "vtex",
  "version": "0.0.1",
  "title": "Glovo Integration",
  "description": "Glovo Integration",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "stageapi.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Glovo Integration",
    "description": "Glovo integration settings",
    "type": "object",
    "required": ["glovoToken"],
    "properties": {
      "glovoToken": {
        "title": "Glovo Token",
        "description": "Token to performe calls to Glovo API",
        "type": "string"
      },
      "affiliateConfig": {
        "title": "Affiliate Settings",
        "description": "Affiliate ID and Glovo Store ID",
        "type": "array",
        "items": {
          "type": "object",
          "required": ["affiliateId", "salesChannel", "glovoStoreId"],
          "properties": {
            "affiliateId": {
              "title": "Affiliate ID",
              "description": "Three letters id generated when creating a new affiliate. Format 'YXZ'",
              "type": "string",
              "maxLength": 3,
              "minLength": 3
            },
            "salesChannel": {
              "title": "Sales Channel",
              "description": "Sales Channel associated to the affiliate ID",
              "type": "string"
            },
            "glovoStoreId": {
              "title": "Glovo Store ID",
              "description": "Glovo Store ID registered in Glovo for the configured Affiliate ID",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
