{
  "name": "glovo-integration",
  "vendor": "vtex",
  "version": "2.0.10",
  "title": "Glovo Integration",
  "description": "Glovo Integration",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {
    "vtex.styleguide": "9.x",
    "vtex.native-types": "0.x",
    "vtex.apps-graphql": "2.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x",
    "admin": "0.x",
    "react": "3.x",
    "messages": "1.x"
  },
  "billingOptions": {
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "type": "free",
    "availableCountries": ["*"]
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "stageapi.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Glovo Integration",
    "description": "Glovo integration settings",
    "type": "object",
    "required": ["glovoToken"],
    "properties": {
      "glovoToken": {
        "title": "Glovo Token",
        "description": "Token to performe calls to Glovo API",
        "type": "string"
      },
      "production": {
        "title": "Production environment",
        "description": "Toggle between development and production environment",
        "type": "boolean"
      },
      "storesConfig": {
        "title": "Store Settings",
        "description": "Store ID and Glovo Store ID",
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "storeId",
            "salesChannel",
            "postalCode",
            "country",
            "glovoStoreId"
          ],
          "properties": {
            "storeId": {
              "title": "Store ID",
              "description": "Three letters id might be paired with a created affiliateId (not mandatory)",
              "type": "string",
              "maxLength": 3,
              "minLength": 3
            },
            "salesChannel": {
              "title": "Sales Channel",
              "description": "Sales Channel associated to the store ID",
              "type": "string"
            },
            "postalCode": {
              "title": "Pickup Point's Postal Code",
              "description": "The postal code for the store that fulfills the orders.",
              "type": "string"
            },
            "country": {
              "title": "Store country",
              "description": "The country for the store.",
              "type": "string",
              "enum": ["ESP"],
              "enumNames": ["Spain"]
            },
            "glovoStoreId": {
              "title": "Glovo Store ID",
              "description": "Glovo Store ID registered in Glovo for the configured Store ID",
              "type": "string"
            }
          }
        }
      },
      "clientProfileData": {
        "title": "Client information",
        "description": "Information about the client from Glovo",
        "type": "object",
        "required": ["email", "firstName", "lastName"],
        "properties": {
          "email": {
            "title": "Email",
            "type": "string"
          },
          "firstName": {
            "title": "First name",
            "type": "string"
          },
          "lastName": {
            "title": "Last name",
            "type": "string"
          },
          "documentType": {
            "title": "Type of document",
            "type": "string"
          },
          "document": {
            "title": "Document",
            "type": "string"
          },
          "phone": {
            "title": "Phone number",
            "type": "string"
          },
          "corporateName": {
            "title": "Corporate name",
            "type": "string"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
