{
  "name": "glovo-integration",
  "vendor": "vtex",
  "version": "0.2.4",
  "title": "Glovo Integration",
  "description": "Glovo Integration",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "billingOptions": {
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "type": "free",
    "availableCountries": ["*"]
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "stageapi.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.glovoapp.com",
        "path": "*"
      }
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "vbase-read-write"
    }
  ],
  "settingsSchema": {
    "title": "Glovo Integration",
    "description": "Glovo integration settings",
    "type": "object",
    "required": ["glovoToken"],
    "properties": {
      "glovoToken": {
        "title": "Glovo Token",
        "description": "Token to performe calls to Glovo API",
        "type": "string"
      },
      "production": {
        "title": "Production environment",
        "description": "Toggle between development and production environment",
        "type": "boolean"
      },
      "affiliateConfig": {
        "title": "Affiliate Settings",
        "description": "Affiliate ID and Glovo Store ID",
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "affiliateId",
            "salesChannel",
            "postalCode",
            "glovoStoreId"
          ],
          "properties": {
            "affiliateId": {
              "title": "Affiliate ID",
              "description": "Three letters id generated when creating a new affiliate. Format 'YXZ'",
              "type": "string",
              "maxLength": 3,
              "minLength": 3
            },
            "salesChannel": {
              "title": "Sales Channel",
              "description": "Sales Channel associated to the affiliate ID",
              "type": "string"
            },
            "postalCode": {
              "title": "Pickup Point's Postal Code",
              "description": "The postal code for the store that fulfils this affiliate",
              "type": "string"
            },
            "glovoStoreId": {
              "title": "Glovo Store ID",
              "description": "Glovo Store ID registered in Glovo for the configured Affiliate ID",
              "type": "string"
            }
          }
        }
      },
      "clientProfileData": {
        "title": "Client information",
        "description": "Information about the client from Glovo",
        "type": "object",
        "required": ["email", "firstName", "lastName"],
        "properties": {
          "email": {
            "title": "Email",
            "type": "string"
          },
          "firstName": {
            "title": "First name",
            "type": "string"
          },
          "lastName": {
            "title": "Last name",
            "type": "string"
          },
          "documentType": {
            "title": "Type of document",
            "type": "string"
          },
          "document": {
            "title": "Document",
            "type": "string"
          },
          "phone": {
            "title": "Phone number",
            "type": "string"
          },
          "corporateName": {
            "title": "Corporate name",
            "type": "string"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
